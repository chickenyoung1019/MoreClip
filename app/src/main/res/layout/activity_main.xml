<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E6F0F9"
    android:fitsSystemWindows="true">

    <!-- バナー広告スペース（将来実装用） -->
    <FrameLayout
        android:id="@+id/adBannerContainer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:visibility="visible" />

    <!-- ヘッダー -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#E6F0F9"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- 戻るボタン（フォルダ内 or 検索時に表示） -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:visibility="gone"
            android:contentDescription="戻る" />

        <!-- タイトル -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="MoreClip"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- SearchView（検索時のみ表示） -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:background="#E6F0F9"
            android:iconifiedByDefault="false"
            android:queryHint="検索..."
            android:visibility="gone" />

        <!-- ゴミ箱 -->
        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:visibility="gone"
            android:contentDescription="削除" />

        <!-- 並び替えモード：キャンセル -->
        <TextView
            android:id="@+id/reorderCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="キャンセル"
            android:textSize="16sp"
            android:textColor="#666666"
            android:padding="8dp"
            android:visibility="gone" />

        <!-- 並び替えモード：完了 -->
        <TextView
            android:id="@+id/reorderDoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完了"
            android:textSize="16sp"
            android:textColor="#1A73E8"
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:visibility="gone" />

        <!-- 検索 -->
        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:layout_marginStart="16dp"
            android:contentDescription="検索" />

        <!-- ︙ -->
        <ImageView
            android:id="@+id/headerMenuButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            android:layout_marginStart="16dp"
            android:contentDescription="メニュー" />

    </LinearLayout>

    <!-- タブレイアウト -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:tabIndicatorColor="#1A73E8"
        app:tabSelectedTextColor="#1A73E8"
        app:tabTextColor="#666666" />

    <!-- ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>