<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MyClipboardApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.MyClipboardApp" parent="Base.Theme.MyClipboardApp" />

    <!-- SearchView用テーマ（ダークモードでも文字が見えるように） -->
    <style name="SearchViewTheme" parent="Theme.Material3.Light">
        <item name="android:editTextColor">#000000</item>
        <item name="android:textColorHint">#666666</item>
    </style>

    <!-- Spinner用テーマ（ダークモードでも文字が見えるように） -->
    <style name="SpinnerTheme" parent="Theme.Material3.Light">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#666666</item>
    </style>
</resources>